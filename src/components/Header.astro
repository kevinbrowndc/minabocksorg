import Logo from '../components/Logo.astro';

const navItems = [
  { href: '#', linkText: 'Link 1' },
  { href: '#', linkText: 'Link 2' },
  { href: '#', linkText: 'Link 3' },
  { href: '#', linkText: 'Link 4' },
  { href: '#', linkText: 'Link 5' },
];
---

<nav class="flex items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24 w-full">
  <!-- Logo (left) -->
  <a href="/">
    <Logo />
  </a>

  <!-- Hamburger (always visible, pushed right) -->
  <label for="menu-toggle" class="ml-auto cursor-pointer text-2xl">
    &#9776;
  </label>
  <input type="checkbox" id="menu-toggle" class="hidden peer" />

  <!-- Nav links -->
  {!!navItems?.length && (
    <ul class="hidden peer-checked:flex flex-col absolute top-full right-0 mt-2 bg-gray-800 rounded-md shadow-lg w-48">
      {navItems.map((item) => (
        <li class="border-b border-gray-700 last:border-none">
          <a
            href={item.href}
            class="block px-4 py-2 text-white hover:bg-gray-700"
          >
            {item.linkText}
          </a>
        </li>
      ))}
    </ul>
  )}
</nav>
