---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Website Design', href: '/website_design' },
    { linkText: 'SEO', href: '/revalidation' },
    { linkText: 'Digital Marketing', href: '/image-cdn' },
    { linkText: 'Contact', href: '/edge' }
];
---

<nav class="flex items-center justify-between gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
  <!-- Logo -->
  <a href="/" class="flex-shrink-0">
    <Logo />
  </a>

  <!-- Hamburger + Menu -->
  <div class="ml-auto relative">
    <!-- Checkbox (hidden) -->
    <input type="checkbox" id="menu-toggle" class="hidden peer" />

    <!-- Hamburger Icon -->
    <label for="menu-toggle" class="cursor-pointer text-2xl">&#9776;</label>

    <!-- Menu -->
    <ul
      class="hidden flex-col gap-y-2 bg-[#333] text-white absolute right-0 mt-2 rounded-lg peer-checked:flex flex-row gap-x-4"
>

      {navItems.map((item) => (
        <li class="border-t border-gray-700 sm:border-0">
          <a href={item.href} class="block px-4 py-2 hover:bg-gray-700 sm:hover:bg-transparent">
            {item.linkText}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
