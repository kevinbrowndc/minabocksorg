---
import Logo from '../components/Logo.astro';

const navItems = [
  { href: '#', linkText: 'Link 1' },
  { href: '#', linkText: 'Link 2' },
  { href: '#', linkText: 'Link 3' },
  { href: '#', linkText: 'Link 4' },
  { href: '#', linkText: 'Link 5' },
];
---

<nav class="flex items-center justify-between gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
  <!-- Logo -->
  <a href="/" class="flex-shrink-0">
    <Logo />
  </a>

  <!-- Mobile Menu -->
  <div class="ml-auto relative sm:hidden">
    <input type="checkbox" id="menu-toggle" class="hidden peer" />
    <label for="menu-toggle" class="cursor-pointer text-2xl">&#9776;</label>

    <ul
      class="absolute right-0 mt-2 hidden flex-col gap-y-2 rounded-lg bg-white shadow-md peer-checked:flex"
    >
      {navItems.map((item) => (
        <li>
          <a href={item.href} class="block px-4 py-2 hover:bg-gray-100">
            {item.linkText}
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- Desktop Menu -->
  <ul class="hidden sm:flex sm:flex-row sm:gap-x-4">
    {navItems.map((item) => (
      <li>
        <a href={item.href} class="inline-block px-3 py-2">
          {item.linkText}
        </a>
      </li>
    ))}
  </ul>
</nav>
