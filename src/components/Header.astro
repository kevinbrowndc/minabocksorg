import Logo from '../components/Logo.astro';
const navItems = [ 
{ linkText: 'Home', href: '/' }, 
{ linkText: 'Revalidation', href: '/revalidation' }, 
{ linkText: 'Image CDN', href: '/image-cdn' }, 
{ linkText: 'Edge Function', href: '/edge' }, 
{ linkText: 'Blobs', href: '/blobs' } ]; 

---
<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
  <a href="/">
    <Logo />
  </a>

  <!-- Hamburger -->
  <label for="menu-toggle" class="cursor-pointer sm:hidden">&#9776;</label>
  <input type="checkbox" id="menu-toggle" class="hidden peer" />

  {!!navItems?.length && (
    <ul class="flex flex-col sm:flex-row gap-x-4 gap-y-1 peer-checked:flex">
      {navItems.map((item) => (
        <li>
          <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
            {item.linkText}
          </a>
        </li>
      ))}
    </ul>
  )}
</nav>
